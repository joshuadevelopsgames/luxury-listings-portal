#!/bin/sh
#
# Pre-push hook to check for syntax errors and build issues
# This prevents pushing code that won't compile

echo "üîç Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if [ ! -d .git ]; then
    echo "${RED}‚ùå Error: Not in a git repository${NC}"
    exit 1
fi

# Get the branch name
branch=$(git symbolic-ref --short HEAD 2>/dev/null)

echo "${YELLOW}üì¶ Checking for syntax errors on branch: ${branch}...${NC}"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo "${YELLOW}‚ö†Ô∏è  node_modules not found. Installing dependencies...${NC}"
    npm install
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå npm install failed${NC}"
        exit 1
    fi
fi

# Run build check to catch syntax errors
echo "${YELLOW}üèóÔ∏è  Running build check...${NC}"
BUILD_OUTPUT=$(npm run build 2>&1)
BUILD_EXIT_CODE=$?

if [ $BUILD_EXIT_CODE -eq 0 ]; then
    echo "${GREEN}‚úÖ Build check passed!${NC}"
else
    echo "${RED}‚ùå Build check failed!${NC}"
    echo ""
    echo "${RED}Build errors:${NC}"
    echo "$BUILD_OUTPUT" | tail -50
    echo ""
    echo "${YELLOW}üí° Fix the errors above before pushing${NC}"
    echo "${YELLOW}üí° You can skip this check with: git push --no-verify${NC}"
    exit 1
fi

echo "${GREEN}‚úÖ All pre-push checks passed!${NC}"
exit 0
