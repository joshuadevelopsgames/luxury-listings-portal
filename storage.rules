rules_version = '2';

// Firebase Storage Security Rules for Luxury Listings Portal
service firebase.storage {
  match /b/{bucket}/o {
    
    // Support ticket screenshots - authenticated users can upload
    match /support-tickets/{fileName} {
      allow read: if true; // Anyone can view (for IT support to see screenshots)
      allow write: if request.auth != null // Only authenticated users can upload
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

