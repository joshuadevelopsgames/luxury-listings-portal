rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Contract files - authenticated users only
    match /contracts/{clientId}/{contractId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Instagram report screenshots - authenticated users can write, anyone can read (for public links)
    match /instagram-reports/{reportId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Client profile photos - authenticated users can read/write
    match /client-photos/{clientId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Content calendar uploads - authenticated users can read/write their own
    match /content-calendar/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Task attachments (task body + comments) - authenticated users can read/write their own
    match /task-attachments/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

